<?xml version="1.0"?>

<launch>

	<!-- Map Server -->
	<!-- <arg name="map_file" default="$(find my_robot)/maps/map.yaml"/> -->
	<!-- <arg name="map_file" default="$(find my_robot)/maps/map_good.yaml"/> -->
	<!--  <arg name="map_file" default="$(find my_robot)/maps/map_eva.yaml"/> -->
	<!-- <arg name="map_file" default="$(find my_robot)/maps/map_testworld.yaml"/> -->
	 <!-- <arg name="map_file" default="$(find my_robot)/maps/buildmyworld.yaml"/> --> 
	<!-- <arg name="map_file" default="$(find my_robot)/maps/map_udacity.yaml"/> -->
	<arg name="map_file" default="$(find my_robot)/maps/building.yaml"/> -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />


	 <!-- AMCL Node -->
  	<node name="amcl" pkg="amcl" type="amcl" output="screen">


    		<!-- define initial pose here -->
    		<param name="initial_pose_x" value="0"/>
    		<param name="initial_pose_y" value="0"/>
  		<param name="initial_pose_a" value="0"/>

		<!-- Odom Parameters -->		
  		<param name="odom_frame_id" value="odom"/>
  		<param name="odom_model_type" value="diff-corrected"/>
  		<param name="base_frame_id" value="robot_footprint"/>
  		<param name="global_frame_id" value="map"/>
		<param name="kld_err" value="0.01"/>			
		<param name="kld_z" value="0.99"/>			 
		
		<!-- odom_alpha1 through odom_alpha4 are used for differential drive, odom_alpha5 is not -->
		<!-- https://answers.ros.org/question/227811/tuning-amcls-diff-corrected-and-omni-corrected-odom-models/ -->
		<!-- https://github.com/ros-planning/navigation/blob/jade-devel/amcl/test/texas_willow_hallway_loop_corrected.xml -->
		<param name="odom_alpha1" value="0.0"/>	  <!-- low odometry noise expected for sim enviroment --> 
    		<param name="odom_alpha2" value="0.0"/>		  <!-- low odometry noise expected for sim enviroment -->
    		<param name="odom_alpha3" value="0.0"/>		  <!-- low odometry noise expected for sim enviroment -->
    		<param name="odom_alpha4" value="0.0"/>		  <!-- low odometry noise expected for sim enviroment -->


		<!-- Filter Parameters -->
		<param name="min_particles" value="100"/>
		<param name="max_particles" value="5000"/>

		<param name="update_min_d" value="0.1"/> 
		<param name="update_min_a" value="M_PI/16.0"/>	
		
		<param name="transform_tolerance" value="0.3"/>

		<!-- Laser Parameters -->
		<param name="laser_min_range" value="0.1"/>
		<param name="laser_max_range" value="30"/>		
		<param name="laser_max_beams" value="30"/>	
                <param name="laser_z_hit" value="0.95"/>		
		<param name="laser_z_rand" value="0.00"/>

 	</node>

	<!-- Move Base -->
	<node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
		<remap from="scan" to="my_robot/laser/scan"/> -->
		<param name="base_global_planner" value="navfn/NavfnROS" />
  		<param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

 		<rosparam file="$(find my_robot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
  		<rosparam file="$(find my_robot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
  		<rosparam file="$(find my_robot)/config/local_costmap_params.yaml" command="load" />
  		<rosparam file="$(find my_robot)/config/global_costmap_params.yaml" command="load" />
  		<rosparam file="$(find my_robot)/config/base_local_planner_params.yaml" command="load" />
	</node> 

</launch>
