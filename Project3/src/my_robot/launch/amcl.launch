<?xml version="1.0"?>

<launch>

	<!-- Map Server -->
	<arg name="map_file" default="$(find my_robot)/maps/map.yaml"/>
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />


	 <!-- AMCL Node -->
  	<node name="amcl" pkg="amcl" type="amcl" output="screen">
		<!-- <remap from="scan" to="my_robot/laser/scan"/> -->


    		<!-- define initial pose here -->
    		<param name="initial_pose_x" value="-33"/>
    		<param name="initial_pose_y" value="-3"/>
  		<param name="initial_pose_a" value="1.5708"/>


		<!-- Filter Parameters -->
		<param name="min_particles" value="100"/>
		<param name="max_particles" value="2000"/>

		<!--
		<param name="initial_cov_xx" value="3"/>
		<param name="initial_cov_yy" value="3"/>
		<param name="initial_cov_aa" value="1.5708"/> -->

		<!-- <param name="update_min_d" value="0.01"/> 
		<param name="update_min_a" value="0.175"/>	-->


		<!-- Odom Parameters -->		
  		<param name="odom_frame_id" value="odom"/>
  		<param name="odom_model_type" value="diff-corrected"/>
  		<param name="base_frame_id" value="robot_footprint"/>
  		<param name="global_frame_id" value="map"/>
		<!-- <param name="transform_tolerance" value="0.2"/> -->

		<!--
		<param name="odom_alpha1" value="0.002"/>
		<param name="odom_alpha2" value="0.002"/>
		<param name="odom_alpha3" value="0.002"/>
		<param name="odom_alpha4" value="0.002"/> -->
		

		<!-- Laser Parameters -->
		<param name="laser_min_range" value="0.1"/>
		<param name="laser_max_range" value="30"/>		
		<param name="laser_max_beams" value="30"/>	
		<param name="laser_z_hit" value="0.95"/>		
		<param name="laser_z_rand" value="0.05"/>


 	</node>

</launch>
